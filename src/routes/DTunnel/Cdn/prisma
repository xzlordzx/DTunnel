server {
    listen 2096;
    server_name http://localhost;  # Substitua pelo seu domínio ou IP

    location /studio/ {
        proxy_pass http://localhost:5555/;  # Porta padrão do Prisma Studio
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;

        auth_basic "Área Restrita";
        auth_basic_user_file /etc/nginx/.htpasswd;
    }
}
